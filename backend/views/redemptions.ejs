<%- include('layout-head', { title, activePage }) %>

<% const statusLabels = {
  redeemed: { label: 'Redeemed', color: 'bg-blue-100 text-blue-700', icon: 'ðŸŽ‰' },
  accepted: { label: 'Accepted', color: 'bg-indigo-100 text-indigo-700', icon: 'âœ…' },
  packed: { label: 'Packed', color: 'bg-purple-100 text-purple-700', icon: 'ðŸ“¦' },
  in_transit: { label: 'In Transit', color: 'bg-cyan-100 text-cyan-700', icon: 'ðŸšš' },
  out_for_delivery: { label: 'Out for Delivery', color: 'bg-amber-100 text-amber-700', icon: 'ðŸ›µ' },
  delivered: { label: 'Delivered', color: 'bg-green-100 text-green-700', icon: 'âœ…' },
}; %>

<!-- Filters -->
<form method="GET" action="/admin/redemptions" class="bg-white rounded-xl border border-gray-200 p-4 mb-6">
  <div class="flex flex-wrap gap-4 items-end">
    <div class="flex-1 min-w-[200px]">
      <label class="block text-xs font-medium text-gray-500 mb-1">Search</label>
      <input type="text" name="search" value="<%= filters.search %>" placeholder="Order ID or gift name..."
             class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
    </div>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1">Status</label>
      <select name="status" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-orange-500">
        <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All Statuses</option>
        <% STATUS_FLOW.forEach(function(s) { %>
          <option value="<%= s %>" <%= filters.status === s ? 'selected' : '' %>><%= statusLabels[s].label %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label class="block text-xs font-medium text-gray-500 mb-1">Category</label>
      <select name="category" class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-orange-500">
        <option value="all" <%= filters.category === 'all' ? 'selected' : '' %>>All Categories</option>
        <option value="tools" <%= filters.category === 'tools' ? 'selected' : '' %>>Pro Tools</option>
        <option value="electronics" <%= filters.category === 'electronics' ? 'selected' : '' %>>Electronics</option>
        <option value="home" <%= filters.category === 'home' ? 'selected' : '' %>>Home & Living</option>
        <option value="lifestyle" <%= filters.category === 'lifestyle' ? 'selected' : '' %>>Lifestyle</option>
        <option value="premium" <%= filters.category === 'premium' ? 'selected' : '' %>>Premium</option>
      </select>
    </div>
    <div>
      <button type="submit" class="px-4 py-2 bg-orange-500 text-white rounded-lg text-sm font-medium hover:bg-orange-600 transition-colors">
        Filter
      </button>
      <a href="/admin/redemptions" class="ml-2 px-4 py-2 bg-gray-100 text-gray-600 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
        Clear
      </a>
    </div>
  </div>
</form>

<!-- Redemptions Table -->
<div class="bg-white rounded-xl border border-gray-200">
  <% if (redemptions.length === 0) { %>
    <div class="px-6 py-12 text-center text-gray-400">
      <p class="text-4xl mb-3">ðŸ“­</p>
      <p>No redemptions found matching your filters.</p>
    </div>
  <% } else { %>
    <div class="px-6 py-3 border-b border-gray-200">
      <p class="text-sm text-gray-500"><%= redemptions.length %> redemption<%= redemptions.length !== 1 ? 's' : '' %> found</p>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <th class="px-6 py-3">Order ID</th>
            <th class="px-6 py-3">Gift</th>
            <th class="px-6 py-3">Category</th>
            <th class="px-6 py-3">Points</th>
            <th class="px-6 py-3">Status</th>
            <th class="px-6 py-3">Docket</th>
            <th class="px-6 py-3">Date</th>
            <th class="px-6 py-3">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% redemptions.forEach(function(r) { %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-3 text-sm font-mono text-gray-800"><%= r.order_id %></td>
              <td class="px-6 py-3 text-sm">
                <span class="mr-1"><%= r.gift_image %></span> <%= r.gift_name %>
              </td>
              <td class="px-6 py-3">
                <span class="text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-600 capitalize"><%= r.gift_category %></span>
              </td>
              <td class="px-6 py-3 text-sm font-medium text-gray-800"><%= r.points_spent.toLocaleString() %> âš¡</td>
              <td class="px-6 py-3">
                <span class="status-badge status-<%= r.status %>"><%= statusLabels[r.status].label %></span>
              </td>
              <td class="px-6 py-3 text-xs font-mono text-gray-500"><%= r.docket_number %></td>
              <td class="px-6 py-3 text-sm text-gray-500"><%= new Date(r.created_at).toLocaleDateString() %></td>
              <td class="px-6 py-3">
                <a href="/admin/redemptions/<%= r.id %>" class="text-sm text-orange-600 hover:underline">View</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('layout-foot') %>
